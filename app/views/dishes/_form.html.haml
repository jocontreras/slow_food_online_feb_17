.row
  .medium-8.medium-centered
    - if @dish.errors.any?
      .callout.small.alert
        %ul
          Please make sure to fill in all the fields correctly
        - @dish.errors.full_messages.each do |error|
          %li
            = error
    = form_for [ @menu.restaurant, @menu, @dish ] do |f|
      = f.label :name
      = f.text_field :name
      = f.label :price
      = f.number_field :price
      = f.label :description
      = f.text_area :description
      = f.label :category
      = f.select(:category , ['Starter','Main course','Dessert'])
      = f.submit nil, class: 'button expanded'
